<?xml version="1.0"?>

<launch>
  <!--Include description and control launch files-->
  <include file="$(find autlab4)/launch/robot_description.launch"/>
  <include file="$(find autlab4)/launch/robot_control.launch"/>

  <!--Launch a gazebo world-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find autlab4)/worlds/table_perception.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!--spawn a robot in gazebo world-->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
  args="-urdf -param robot_description -x 0 -y 1.8 -z 0 -R 0 -P 0 -Y 0 -model autlab4_stick"/>

  <!-- cloud transformer-->
  <node name="cloud_transformer" pkg="autlab4" type="cloud_transformer" respawn="false"/>

  <!-- launch rviz-->
  <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false"
    output="screen" args="-d $(find autlab4)/config/perception.rviz"/>

</launch>
